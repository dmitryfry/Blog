<h1> Edit article </h1>


<%=  form_for :article, url: article_path(@article), method: :put do |f| %>
<% if @article && @article.errors.any? %>
<%= @article.errors.full_messages %>
<% end %>
<p>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :text %> <br>
  <%= f.text_area :text %>
</p>
<p> <%= f.submit %>
</p>
<% end %>
