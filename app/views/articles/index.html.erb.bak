<% @articles.each do |article| %>

<h2>
  <%= article.title %>
</h2>
<p>
  <%= article.text %>
</p>
<%= link_to 'show', article_path(article) %> |
<% if current_user != nil %>
<% if current_user.username == article.author %>
<%= link_to 'edit', edit_article_path(article) %> |
<%= link_to 'delete', article, method: :delete, data: {confirm: 'Вы уверены?'} %>
<% end %>
<% end %>
<hr>
<% end %>
