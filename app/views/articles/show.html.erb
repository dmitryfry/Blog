
  <h3> <%= @article.title %> </h3>
  <p>
    <%= @article.text %>
  </p>

<p>
 <%= form_for ([@article, @article.comments.build]) do |f| %>
</p>
<p>
  <%= f.label :author %> <br>
  <%= f.text_field :author %>
</p>
<p>
  <%= f.label :body %> <br>
  <%= f.text_area :body %>
</p>

<p>
  <%= f.submit %>

</p>

<% end %>
<h3> Комментарии </h3>
<% @article.comments.each do |comment| %>

<h4>
  <%= comment.author %>
</h4>
<p>
  <%= comment.body %>
<hr>
<% end %>
